{% import "_includes/forms" as forms %}

<div class="seo-field-sections">
  <div class="seo-section">
    <h3 class="seo-section-heading">Metadatos</h3>
    <p class="seo-section-description light">Título, descripción e imagen que aparecerán en buscadores y redes sociales.</p>

    <div class="flex-fields">
      {{ forms.textField({
        label: 'Titulo',
        name: field.handle ~ '[title]',
        value: value.title,
        translatable: true,
        fieldClass: 'width-50',
      }) }}

      {{ forms.textareaField({
        label: 'Descripcion',
        name: field.handle ~ '[description]',
        value: value.description,
        rows: 3,
        translatable: true,
        fieldClass: 'width-50',
      }) }}
    </div>

    <div class="flex-fields">
      {{ forms.elementSelectField({
        label: 'Imagen',
        id: field.handle ~ '-image',
        name: field.handle ~ '[imageId][]',
        elementType: 'craft\elements\Asset',
        elements: imageElement ? [imageElement] : [],
        limit: 1,
        sources: '*',
        criteria: { kind: 'image' },
        translatable: true,
        fieldClass: 'width-50',
      }) }}

      {{ forms.textareaField({
        label: 'Descripcion de imagen',
        name: field.handle ~ '[imageDescription]',
        value: value.imageDescription,
        rows: 3,
        translatable: true,
        fieldClass: 'width-50',
      }) }}
    </div>
  </div>

  <hr class="seo-section-divider">

  <div class="seo-section">
    <h3 class="seo-section-heading">Sitemap</h3>
    <p class="seo-section-description light">Controla la visibilidad de esta entrada en el sitemap XML.</p>

    <div class="flex-fields">
      {{ forms.lightswitchField({
        label: 'Visible en sitemap',
        name: field.handle ~ '[sitemapEnabled]',
        on: value.sitemapEnabled is same as(false) ? false : true,
        value: 1,
        fieldClass: 'width-50',
      }) }}

      {{ forms.lightswitchField({
        label: 'Incluir imágenes',
        name: field.handle ~ '[sitemapIncludeImages]',
        on: value.sitemapIncludeImages is same as(true),
        value: 1,
        fieldClass: 'width-50',
      }) }}
    </div>
  </div>
</div>

{% css %}
  .seo-section-heading {
    margin: 0 0 4px;
    font-size: 14px;
    font-weight: 600;
    color: var(--text-color);
  }
  .seo-section-description {
    margin: 0 0 16px;
    font-size: 13px;
  }
  .seo-section-divider {
    border: 0;
    border-top: 1px solid var(--hairline-color);
    margin: 16px 0;
  }
{% endcss %}
