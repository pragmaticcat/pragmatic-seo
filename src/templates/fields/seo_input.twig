{% import "_includes/forms" as forms %}

<div class="seo-field-sections">
  <div class="seo-section">
    <h3 class="seo-section-heading">{{ 'Metadata'|t('pragmatic-seo') }}</h3>
    <p class="seo-section-description light">{{ 'Title, description and image that will appear in search engines and social networks.'|t('pragmatic-seo') }}</p>

    <div class="flex-fields">
      {{ forms.textField({
        label: 'Title'|t('pragmatic-seo'),
        name: field.handle ~ '[title]',
        value: value.title,
        translatable: true,
        fieldClass: 'width-50',
      }) }}

      {{ forms.textareaField({
        label: 'Description'|t('pragmatic-seo'),
        name: field.handle ~ '[description]',
        value: value.description,
        rows: 3,
        translatable: true,
        fieldClass: 'width-50',
      }) }}
    </div>

    <div class="flex-fields">
      {{ forms.elementSelectField({
        label: 'Image'|t('pragmatic-seo'),
        id: field.handle ~ '-image',
        name: field.handle ~ '[imageId][]',
        elementType: 'craft\\elements\\Asset',
        elements: imageElement ? [imageElement] : [],
        limit: 1,
        sources: '*',
        criteria: { kind: 'image' },
        translatable: true,
        fieldClass: 'width-50',
      }) }}

      {{ forms.textareaField({
        label: 'Image description'|t('pragmatic-seo'),
        name: field.handle ~ '[imageDescription]',
        value: value.imageDescription,
        rows: 3,
        translatable: true,
        fieldClass: 'width-50',
      }) }}
    </div>
  </div>

  <hr class="seo-section-divider">

  <div class="seo-section">
    <h3 class="seo-section-heading">{{ 'Sitemap'|t('pragmatic-seo') }}</h3>
    <p class="seo-section-description light">{{ 'Controls the visibility of this entry in the XML sitemap.'|t('pragmatic-seo') }}</p>

    <div class="flex-fields">
      {{ forms.lightswitchField({
        label: 'Visible in sitemap'|t('pragmatic-seo'),
        name: field.handle ~ '[sitemapEnabled]',
        on: value.sitemapEnabled is same as(false) ? false : true,
        value: 1,
        fieldClass: 'width-50',
      }) }}

      {{ forms.lightswitchField({
        label: 'Include images'|t('pragmatic-seo'),
        name: field.handle ~ '[sitemapIncludeImages]',
        on: value.sitemapIncludeImages is same as(true),
        value: 1,
        fieldClass: 'width-50',
      }) }}
    </div>
  </div>
</div>

{% css %}
  .seo-section-heading {
    margin: 0 0 4px;
    font-size: 14px;
    font-weight: 600;
    color: var(--text-color);
  }
  .seo-section-description {
    margin: 0 0 16px;
    font-size: 13px;
  }
  .seo-section-divider {
    border: 0;
    border-top: 1px solid var(--hairline-color);
    margin: 16px 0;
  }
{% endcss %}
